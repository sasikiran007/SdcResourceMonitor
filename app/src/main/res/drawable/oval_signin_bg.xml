<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android = "http://schemas.android.com/apk/res/android">
    <item android:state_pressed = "true">
        <shape android:shape="rectangle">

            <corners
                android:bottomLeftRadius="16dp"
                android:bottomRightRadius="16dp"
                android:radius="30dp"
                android:topLeftRadius="16dp"
                android:topRightRadius="16dp" />

            <solid android:color="#425BB4" />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <size
                android:width="144dp"
                android:height="24dp" />

        </shape>
    </item>
    <item android:state_pressed = "false">
        <shape android:shape="rectangle">

            <corners
                android:bottomLeftRadius="16dp"
                android:bottomRightRadius="16dp"
                android:radius="30dp"
                android:topLeftRadius="16dp"
                android:topRightRadius="16dp" />

            <solid android:color="#1982C5" />

            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <size
                android:width="144dp"
                android:height="24dp" />

        </shape>
    </item>
</selector>



