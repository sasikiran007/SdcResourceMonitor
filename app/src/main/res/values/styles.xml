<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
<!--        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
        <item name="colorPrimaryDark">@color/appBarBackgroundDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.SDC.Theme" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:background">@color/appBarBackgroundColor</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Widget.SDC.Card.Theme" parent="Base.CardView">
        <item name="android:layout_height">102dp</item>
        <item name="android:layout_width">109dp</item>
        <item name="cardCornerRadius">10dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:textScaleX">1.2</item>

    </style>

    <style name="Widget.SDC.AlertStat.Item.Theme" parent="Base.CardView">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_width">60dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="Widget.SDC.RefreshTime.THeme" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/alertStatItemTime</item>
    </style>
</resources>
